/* miniprogram/pages/dashboard/dashboard.wxss (saved as .css) */
page {
  background-color: #f8fafc;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.glass-nav {
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(12px);
}

.header {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
  flex-shrink: 0;
  z-index: 50;
}

.header-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #334155;
  letter-spacing: 1px;
}

.content-scroll {
  flex: 1;
  height: 0; /* Important for flex child scroll */
}

.padding-wrap {
  padding: 32rpx;
  padding-bottom: 150rpx;
}

/* Cards */
.card {
  background: white;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 20rpx -2rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 32rpx;
  position: relative;
  overflow: hidden;
}

.budget-card {
  padding: 40rpx;
  background: white;
}

.card-decor {
  position: absolute;
  top: 0;
  right: 0;
  width: 200rpx;
  height: 200rpx;
  background-color: #eef2ff;
  border-bottom-left-radius: 100%;
  margin-right: -40rpx;
  margin-top: -40rpx;
  z-index: 0;
}

.card-content {
  position: relative;
  z-index: 1;
}

.budget-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.label {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 600;
  text-transform: uppercase;
  margin-bottom: 8rpx;
  display: block;
}

.amount-row {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.curr-amount {
  font-size: 48rpx;
  font-weight: bold;
  color: #1e293b;
}

.total-amount {
  font-size: 28rpx;
  color: #94a3b8;
  font-weight: 500;
}

.settings-btn {
  padding: 16rpx;
  background: #f1f5f9;
  border-radius: 50%;
}

.progress-container {
  height: 16rpx;
  background-color: #f1f5f9;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-bar {
  height: 100%;
  border-radius: 8rpx;
  transition: width 1s ease-out;
}

.bg-indigo { background-color: #6366f1; }
.bg-orange { background-color: #fb923c; }
.bg-red { background-color: #ef4444; }

.budget-footer {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  font-weight: 500;
}

.text-indigo { color: #6366f1; }
.text-gray { color: #94a3b8; }

/* Chart Section */
.chart-card {
  padding: 32rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1e293b;
  margin-bottom: 24rpx;
  display: block;
}

.chart-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.chart-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.chart-label {
  width: 80rpx;
  color: #64748b;
}

.chart-bar-bg {
  flex: 1;
  height: 12rpx;
  background: #f8fafc;
  border-radius: 6rpx;
  margin: 0 16rpx;
  overflow: hidden;
}

.chart-bar-fill {
  height: 100%;
  border-radius: 6rpx;
}

.chart-value {
  width: 80rpx;
  text-align: right;
  font-weight: bold;
  color: #334155;
}

/* Tabs */
.sticky-tabs {
  position: sticky;
  top: 0;
  z-index: 10;
  background: rgba(248, 250, 252, 0.95);
  padding: 16rpx 0;
  margin: 0 -32rpx; /* Counteract parent padding */
  padding-left: 32rpx;
}

.tabs-scroll {
  white-space: nowrap;
  display: flex;
  height: 80rpx;
}

.tab-item {
  display: inline-flex;
  padding: 16rpx 40rpx;
  margin-right: 16rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  font-weight: bold;
  transition: all 0.3s;
}

.tab-active {
  background-color: #1e293b;
  color: white;
  transform: scale(1.02);
}

.tab-normal {
  background-color: white;
  color: #64748b;
}

.sub-tabs-scroll {
  white-space: nowrap;
  display: flex;
  margin-top: 16rpx;
  height: 60rpx;
}

.sub-tab {
  display: inline-flex;
  padding: 10rpx 24rpx;
  margin-right: 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
  border: 1rpx solid #e2e8f0;
  background: white;
  color: #64748b;
}

.sub-active {
  background-color: #eef2ff;
  border-color: #c7d2fe;
  color: #4f46e5;
}

/* Records */
.record-list {
  margin-top: 16rpx;
}

.record-item {
  background: white;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  gap: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.02);
}

.date-box {
  background-color: #f8fafc;
  border-radius: 24rpx;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.date-month {
  font-size: 22rpx;
  font-weight: bold;
  color: #94a3b8;
}

.date-day {
  font-size: 36rpx;
  font-weight: bold;
  color: #1e293b;
}

.record-content {
  flex: 1;
  min-width: 0;
}

.record-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.record-title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.emoji {
  font-size: 40rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
}

.amount-badge {
  background-color: #f1f5f9;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #1e293b;
}

.time-text {
  font-size: 24rpx;
  color: #94a3b8;
  display: block;
  margin-top: 8rpx;
}

.desc-text {
  font-size: 28rpx;
  color: #475569;
  margin-top: 16rpx;
  display: block;
  line-height: 1.5;
}

.tags-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 20rpx;
}

.tag {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-weight: 600;
}

.tag-yellow { background: #fefce8; color: #ca8a04; }
.tag-indigo { background: #eef2ff; color: #4f46e5; }
.tag-blue { background: #eff6ff; color: #2563eb; }

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  color: #94a3b8;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  background: #f1f5f9;
  border-radius: 50%;
  margin-bottom: 24rpx;
}

.clear-btn {
  background: #fef2f2;
  color: #ef4444;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 24rpx;
  padding: 24rpx 0;
  width: 100%;
}

/* Modal */
.modal-overlay {
  position: fixed;
  inset: 0;
  background: rgba(15, 23, 42, 0.4);
  backdrop-filter: blur(4px);
  z-index: 200;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.modal-content {
  background: white;
  width: 100%;
  max-width: 600rpx;
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 50rpx rgba(0,0,0,0.1);
}

.modal-header {
  padding: 32rpx;
  background: #f8fafc;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e2e8f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  background: #e2e8f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #64748b;
  font-size: 40rpx;
  line-height: 1;
}

.modal-body {
  padding: 40rpx;
}

.form-group {
  margin-bottom: 24rpx;
}

.input-wrapper {
  position: relative;
  margin-top: 16rpx;
}

.prefix {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #94a3b8;
  font-weight: bold;
}

.modal-input {
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 24rpx;
  height: 100rpx;
  padding-left: 60rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #1e293b;
}

.hint-text {
  font-size: 24rpx;
  color: #94a3b8;
  margin-top: 16rpx;
}

.modal-footer {
  padding: 32rpx;
  border-top: 1rpx solid #f1f5f9;
}

.save-btn {
  background: #6366f1;
  color: white;
  border-radius: 24rpx;
  font-weight: bold;
  font-size: 32rpx;
  padding: 24rpx 0;
  box-shadow: 0 8rpx 20rpx rgba(99, 102, 241, 0.3);
}

/* Animations */
.fade-in {
  opacity: 0;
  animation: fadeIn 0.5s ease-out forwards;
}

.fade-in-up {
  opacity: 0;
  animation: fadeInUp 0.4s cubic-bezier(0.16, 1, 0.3, 1) forwards;
}

.stagger-1 { animation-delay: 0.1s; }
.stagger-2 { animation-delay: 0.2s; }
.stagger-3 { animation-delay: 0.3s; }
.stagger-4 { animation-delay: 0.4s; }

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}
