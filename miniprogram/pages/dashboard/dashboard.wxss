/* Dashboard 容器 */
.dashboard-container {
  height: 100vh;
  background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%);
  display: flex;
  flex-direction: column;
}

/* 预算部分 */
.budget-section {
  background: white;
  padding: 32rpx 24rpx;
  margin: 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.budget-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.budget-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #64748b;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.settings-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.settings-btn:active {
  transform: scale(0.95);
  background: #e2e8f0;
}

.settings-icon {
  font-size: 24rpx;
}

.budget-amount {
  display: flex;
  align-items: baseline;
  margin-bottom: 16rpx;
}

.spent {
  font-size: 48rpx;
  font-weight: bold;
  color: #1e293b;
}

.total {
  font-size: 28rpx;
  color: #94a3b8;
  margin-left: 8rpx;
}

.budget-progress {
  margin-bottom: 16rpx;
}

.budget-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}

.progress-text {
  color: #667eea;
  font-weight: 500;
}

.remaining-text {
  color: #94a3b8;
}

/* 图表部分 */
.chart-section {
  background: white;
  padding: 32rpx 24rpx;
  margin: 0 24rpx 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.chart-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1e293b;
  margin-bottom: 24rpx;
  display: block;
}

.chart-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.chart-bar {
  display: flex;
  flex-direction: column;
}

.chart-label {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.category-name {
  font-size: 26rpx;
  color: #334155;
  font-weight: 500;
}

.category-amount {
  font-size: 26rpx;
  color: #64748b;
  font-weight: 500;
}

.chart-bar-bg {
  height: 24rpx;
  background: #e2e8f0;
  border-radius: 12rpx;
  overflow: hidden;
}

.chart-bar-fill {
  height: 100%;
  border-radius: 12rpx;
  transition: width 0.5s ease-out;
}

/* Tab 切换 */
.tabs {
  display: flex;
  background: white;
  margin: 0 24rpx 24rpx;
  border-radius: 24rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 26rpx;
  color: #94a3b8;
  font-weight: 500;
  border-radius: 16rpx;
  transition: all 0.2s;
}

.tab.active {
  background: #1e293b;
  color: white;
  font-weight: bold;
}

.tab:active {
  transform: scale(0.98);
}

/* 分类筛选 */
.category-filter {
  margin: 0 24rpx 24rpx;
}

.category-scroll {
  display: flex;
  gap: 16rpx;
  padding: 8rpx 0;
}

.category-item {
  flex-shrink: 0;
  padding: 16rpx 24rpx;
  background: white;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #64748b;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s;
}

.category-item.active {
  background: #667eea;
  color: white;
  font-weight: 500;
}

.category-item:active {
  transform: scale(0.98);
}

/* 记录列表 */
.records-list {
  flex: 1;
  padding: 0 24rpx 32rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  color: #94a3b8;
}

.empty-text {
  font-size: 28rpx;
}

/* 记录项 */
.record-item {
  display: flex;
  background: white;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.record-date {
  width: 80rpx;
  height: 80rpx;
  background: #f1f5f9;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.month {
  font-size: 20rpx;
  color: #94a3b8;
  font-weight: bold;
}

.day {
  font-size: 32rpx;
  color: #1e293b;
  font-weight: bold;
}

.record-content {
  flex: 1;
  min-width: 0;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.record-title-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.mood-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.emoji {
  font-size: 36rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
}

.amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
  background: #f1f5f9;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.time {
  font-size: 20rpx;
  color: #94a3b8;
  margin-bottom: 16rpx;
  display: block;
}

.description {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: block;
}

.images {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
  overflow-x: auto;
}

.record-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.mood-tag {
  background: #fef3c7;
  color: #d97706;
}

.expense-category {
  background: #dbeafe;
  color: #2563eb;
}

.event-category {
  background: #dbeafe;
  color: #2563eb;
}

/* 清空数据 */
.clear-data-section {
  margin-top: 32rpx;
  padding-bottom: 32rpx;
}

.clear-btn {
  width: 100%;
  padding: 32rpx;
  background: #fef2f2;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  color: #ef4444;
  font-weight: bold;
  font-size: 28rpx;
}

.clear-icon {
  font-size: 32rpx;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-width: 600rpx;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #e2e8f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon {
  font-size: 36rpx;
  color: #64748b;
}

.modal-body {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.budget-input-group {
  margin-bottom: 32rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #334155;
  margin-bottom: 16rpx;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background: #f1f5f9;
  border-radius: 16rpx;
  padding: 0 24rpx;
}

.input-wrapper.small {
  padding: 0 16rpx;
}

.currency {
  font-size: 28rpx;
  color: #94a3b8;
  font-weight: bold;
  margin-right: 8rpx;
}

.budget-input, .category-input-field {
  flex: 1;
  padding: 24rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  background: transparent;
  border: none;
  outline: none;
}

.category-input-field {
  padding: 16rpx 0;
  font-size: 28rpx;
}

.category-budgets {
  margin-top: 32rpx;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #334155;
  margin-bottom: 24rpx;
}

.category-input {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.category-label {
  font-size: 26rpx;
  color: #64748b;
  font-weight: 500;
  width: 120rpx;
}

.modal-footer {
  padding: 32rpx;
  border-top: 1rpx solid #e2e8f0;
}

.save-btn {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

/* 响应式调整 */
@media (min-width: 768px) {
  .modal-content {
    width: 80%;
    max-width: 500px;
  }
}